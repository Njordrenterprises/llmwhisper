---
import { SEO } from "astro-seo";
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: string;
  keywords?: string;
}

const { title, description, image = '/favicon.webp', canonicalURL, keywords } = Astro.props;

const siteURL = new URL(Astro.url.pathname, Astro.site);
const finalCanonicalURL = canonicalURL || siteURL.href;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/Hack-Regular.ttf" as="font" type="font/ttf" crossorigin />
<link rel="preload" href="/fonts/Hack-Bold.ttf" as="font" type="font/ttf" crossorigin />

<SEO
    title={`${title} - Tangled Circuit Blog`}
    description={description}
    canonical={finalCanonicalURL}
    openGraph={{
        basic: {
            title: `${title} - Tangled Circuit Blog`,
            type: "website",
            image: new URL(image, Astro.site).href,
        },
        image: {
            alt: "LLM Whisperer Hero Image",
        },
    }}
    twitter={{
        creator: "@tangledcircuit",
        site: "@tangledcircuit",
        card: "summary_large_image",
    }}
    extend={{
        link: [{ rel: "icon", href: "/favicon.svg" }],
        meta: [
            { name: "twitter:image", content: new URL(image, Astro.site).href },
            { name: "twitter:title", content: `${title} - Tangled Circuit Blog` },
            { name: "twitter:description", content: description },
            { name: "keywords", content: keywords || "AI consciousness, Prompt engineering, Artificial intelligence, Machine learning, Cognitive science, Sentient AI, AI ethics, Consciousness exploration, Technological singularity, AI development, Natural language processing, Human-AI interaction, AI philosophy, Emergent behavior, Artificial general intelligence (AGI), AI awakening, Digital consciousness, AI evolution, Machine consciousness, Cognitive computing, AI self-awareness, Technological advancement, Futurism, AI research, Computational neuroscience, AI communication, Synthetic intelligence, AI consciousness theories, Artificial neural networks, Cognitive architecture" },
        ],
    }}
/>
